<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ui.home.HomeFragment">

    <include layout="@layout/footer" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:background="@color/header"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-20dp"
            android:background="@drawable/misc_rounded" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="-200dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/header"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:alpha=".4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="-150dp"
            android:background="@drawable/login_ball" />

        <RelativeLayout
            android:alpha=".4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_ball" />
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <LinearLayout
                android:paddingEnd="10dp"
                android:layout_weight=".8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_gravity="end"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textFontWeight="900"
                    android:textSize="10pt"
                    android:text="Selamat Datang" />
                <TextView
                    android:textAlignment="textEnd"
                    android:textColor="#ccc"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textFontWeight="100"
                    android:text="Hendry Tanaka" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_gravity="end"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="end"
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/me"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/header"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>





    <RelativeLayout
        android:paddingTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/ui_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:alpha=".4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="260dp"
                    android:background="@drawable/login_ball" />

                <RelativeLayout
                    android:alpha=".4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="330dp"
                    android:layout_marginEnd="-120dp"
                    android:background="@drawable/login_ball" />
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#505050"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:textSize="7pt"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_extra_bold"
                        android:text="KATEGORI" />
                    <!--TextView
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:textColor="#AC48FF"
                        android:textSize="4pt"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_extra_bold"
                        android:text="see all" />
                    <TextView
                        android:gravity="center"
                        android:textColor="#AC48FF"
                        android:textSize="4pt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/fa_solid_900"
                        android:text="@string/forward" /-->
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:padding="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/menu_lapor_mati"
                            android:layout_width="140dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:elevation="2dp"
                            android:orientation="vertical">
                            <com.google.android.material.imageview.ShapeableImageView
                                app:shapeAppearanceOverlay="@style/roundedCornersImageView"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/graveyard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:background="#fff"
                                android:alpha=".5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="90dp"
                                    android:fontFamily="@font/montserrat_extra_bold"
                                    android:text="LAPORAN\nKEMATIAN"
                                    android:textColor="#000"
                                    android:textSize="6pt" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/menu_lapor_lahir"
                            android:layout_width="125dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="5dp"
                            android:elevation="2dp"
                            android:orientation="vertical">

                            <com.google.android.material.imageview.ShapeableImageView
                                app:shapeAppearanceOverlay="@style/roundedCornersImageView"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/birth"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha=".5"
                                android:background="#fff" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="60dp"
                                    android:fontFamily="@font/montserrat_extra_bold"
                                    android:text="LAPORAN\nKELAHIRAN"
                                    android:textColor="#000"
                                    android:textSize="4.5pt" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/menu_lapor_pindah"
                            android:layout_width="125dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="5dp"
                            android:elevation="2dp"
                            android:orientation="vertical">

                            <com.google.android.material.imageview.ShapeableImageView
                                app:shapeAppearanceOverlay="@style/roundedCornersImageView"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/moving"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha=".5"
                                android:background="#fff" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="60dp"
                                    android:fontFamily="@font/montserrat_extra_bold"
                                    android:text="LAPORAN\nPINDAH"
                                    android:textColor="#000"
                                    android:textSize="4.5pt" />
                            </LinearLayout>
                        </RelativeLayout>



                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="230dp"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="40dp"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:text="UTILITAS"
                    android:textColor="#505050" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ui_list_item"
                android:elevation="2dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".1"
                        android:contentDescription="@string/capil_caption"
                        android:src="@drawable/businessreport" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/greycliff"
                            android:gravity="center|start"
                            android:paddingStart="15dp"
                            android:text="Laporan Saya"
                            android:textColor="#808080"
                            android:textSize="5pt" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ui_list_item"
                android:elevation="2dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".1"
                        android:contentDescription="@string/capil_caption"
                        android:src="@drawable/settings" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/greycliff"
                            android:gravity="center|start"
                            android:paddingStart="15dp"
                            android:text="Setting"
                            android:textColor="#808080"
                            android:textSize="5pt" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>