<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MEDANCAPILPELAPORAN" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/header</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="toast_error">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/montserrat_extra_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#F31204</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#CB0C00</item>
        <item name="stIconStart">@drawable/cancel</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_info">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/montserrat_extra_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#02ABDD</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#007293</item>
        <item name="stIconStart">@drawable/info</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_warning">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#282828</item>
        <item name="stFont">@font/montserrat_extra_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#F7E800</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#F4C400</item>
        <item name="stIconStart">@drawable/warning</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
